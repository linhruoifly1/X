<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddUserFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_width="202dp"
        android:layout_height="187dp"
        android:layout_gravity="center"
        android:src="@drawable/adduser" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ Tên"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        />

    <EditText
        android:id="@+id/edthoTenadd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:paddingLeft="20sp"
        android:background="@drawable/boder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:id="@+id/edtEmailadd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/boder"
        android:paddingLeft="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:id="@+id/edtUsernameadd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/boder"
        android:paddingLeft="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:id="@+id/edtpassadd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="20sp"
        android:background="@drawable/boder"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnthemUser"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/boderbutton"
        android:text="Thêm"
        android:textColor="@color/white"
        />

</LinearLayout>